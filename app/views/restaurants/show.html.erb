<h3 id="notice"><%= notice %></h3>

<div class="container">
	<div class="col-md-4 col-md-offset-4 info-card">
		<div class="row">
			<div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
			 	<h1><%= @restaurant.name %></h1>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
				  <p><%= @restaurant.address %></p>
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-4 col-md-offset-4 text-center">
				<div class="info">
					<p class="inline">Phone Number:</p>
					<h3 class="inline"><%= @restaurant.phone_number %></h3>
				</div>
			 	
			</div>
		</div>
		<div class="row">
			<div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
			<div class="info">
				<p class="inline">Category:</p>
			 	<h3 class="inline"><%= @restaurant.category %></h3>
			</div>
			</div>
		</div>	
		<div class="action">
			<div class="row">
				<div class="col-xs-12 col-md-6 col-md-offset-3 text-center">
					<%= link_to 'Review', restaurant_reviews_path(@restaurant), class: "btn btn-success" %>

					<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-warning" %>
					<%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
				</div>
			</div>
		</div>			
	</div>
</div>

