<p id="notice"><%= notice %></p>

<h1>Restaurants</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-2"><h3>Name</h3></div>
    <div class="col-xs-2"><h3>Address</h3></div>
    <div class="col-xs-2"><h3>Phone Number</h3></div>
    <div class="col-xs-2"><h3>Category</h3></div>
  </div>
    
    <% @restaurants.each do |restaurant| %>
      <div class="row">
        <div class="col-xs-2"><p><%= restaurant.name %></p></div>
        <div class="col-xs-2"><p><%= restaurant.address %></p></div>
        <div class="col-xs-2"><p><%= restaurant.phone_number %></p></div>
        <div class="col-xs-2"><p><%= restaurant.category %></p></div>
        <div class="col-xs-1"><p><%= link_to 'Show', restaurant, class: "btn btn-info" %></p></div>
        <div class="col-xs-1"><p><%= link_to 'Edit', edit_restaurant_path(restaurant), class: "btn btn-warning" %></p></div>
        <div class="col-xs-1"><p><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-danger" %></p></div>
      </div>

    <% end %>


</div>

